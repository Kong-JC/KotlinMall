<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.goodscenter">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.example.baselibrary.common.BaseApplication"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".ui.activity.GoodsActivity"/>
        <activity android:name=".ui.activity.SearchGoodsActivity"/>
        <activity android:name=".ui.activity.CartActivity"/>
        <activity android:name=".ui.activity.GoodsDetailActivity"/>
        <activity android:name=".ui.activity.CategoryActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>